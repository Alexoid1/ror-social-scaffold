
<li>
  <p>Name: <%= user.name %></p>
  <span class="profile-link">
    <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
   

    <% if current_user.friendships.find_by(friend_id: user.id) %>
    <%= link_to current_user.friendships.find_by(friend_id:user.id), method: :delete, data: { confirm: "Are you sure you want to delete this friendship request?" } do %>
      <button type="button" class="butto">

          Delete friendship request
      </button>
  <% end %>
      
    <% else  %>
      <%= form_for current_user.friendships.build(friend: user) do |f| %>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :friend_id %>
        <%= f.submit 'Invite to friendship' %>
      <% end %>  
    <% end %>
   
  </span>
</li>

